---
import Header from '../components/Header.jsx';
import Footer from '../components/Footer.jsx';
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
	image?: string;
	canonicalURL?: string;
	type?: 'website' | 'article' | 'product';
	keywords?: string;
	author?: string;
	publishedTime?: string;
	modifiedTime?: string;
}

const {
	title,
	description = "Evelyn Cosmetics ,Tu tienda de belleza favorita en Bolivia. Cosméticos de alta calidad",
	image = "/og-image-optimized.jpg",
	canonicalURL = Astro.url.href,
	type = "website",
	keywords = "cosméticos, maquillaje, belleza, cuidado de piel, fragancias, Evelyn Cosmetics, Bolivia",
	author = "Evelyn Cosmetics",
	publishedTime,
	modifiedTime,
} = Astro.props;

const siteURL = Astro.site || new URL(Astro.url.origin);
// Si la imagen ya es una URL absoluta, usarla directamente; si no, construir la URL completa
const imageURL = image.startsWith('http') ? image : new URL(image, siteURL).href;
const siteName = "Evelyn Cosmetics";
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/png" href="/evelyncosmetics.png" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Preconnect para optimización -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
		
		<!-- SEO Básico -->
		<title>{title} | {siteName}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content={author} />
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Open Graph / Facebook / WhatsApp / LinkedIn -->
		<meta property="og:type" content={type} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={`${title} | ${siteName}`} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={imageURL} />
		<meta property="og:image:secure_url" content={imageURL} />
		<meta property="og:image:type" content="image/jpeg" />
		<meta property="og:image:alt" content={`${title} - ${siteName}`} />
		<meta property="og:site_name" content={siteName} />
		<meta property="og:locale" content="es_BO" />
		{publishedTime && <meta property="article:published_time" content={publishedTime} />}
		{modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
		
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@evelyncosmetics" />
		<meta name="twitter:creator" content="@evelyncosmetics" />
		<meta name="twitter:title" content={`${title} | ${siteName}`} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={imageURL} />
		<meta name="twitter:image:alt" content={`${title} - ${siteName}`} />
		
		<!-- Tema y colores -->
		<meta name="theme-color" content="#ec4899" />
		<meta name="msapplication-TileColor" content="#ec4899" />
		
		<!-- Structured Data / JSON-LD -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "Organization",
			"name": siteName,
			"url": siteURL.href,
			"logo": imageURL,
			"description": description,
			"sameAs": []
		})} />
	</head>
	<body class="">
		<!-- Loader Global -->
		<div id="page-loader" class="fixed inset-0 z-[9999] flex items-center justify-center bg-white transition-opacity duration-500">
			<div class="flex flex-col items-center !gap-4">
				<div class="relative">
					<!-- Logo animado -->
					<img 
						src="/evelyncosmetics.png" 
						alt="Evelyn Cosmetics" 
						class="w-20 h-20 object-contain animate-pulse"
					/>
					<!-- Spinner alrededor del logo -->
					<div class="absolute inset-0 !-m-2">
						<svg class="w-24 h-24 animate-spin" viewBox="0 0 100 100">
							<circle 
								cx="50" 
								cy="50" 
								r="45" 
								fill="none" 
								stroke="#fce7f3" 
								stroke-width="4"
							/>
							<circle 
								cx="50" 
								cy="50" 
								r="45" 
								fill="none" 
								stroke="#ec4899" 
								stroke-width="4"
								stroke-linecap="round"
								stroke-dasharray="70 200"
							/>
						</svg>
					</div>
				</div>
				<p class="text-pink-500 font-medium text-sm animate-pulse">Cargando...</p>
			</div>
		</div>

		<Header client:load />
		<slot />
		<Footer/>

		<script is:inline>
			// Ocultar loader cuando TODO esté completamente cargado
			function hideLoader() {
				const loader = document.getElementById('page-loader');
				if (loader) {
					loader.style.opacity = '0';
					setTimeout(() => {
						loader.style.display = 'none';
					}, 500);
				}
			}

			// Esperar a que todas las imágenes estén cargadas
			function waitForImages() {
				const images = document.querySelectorAll('img');
				const imagePromises = Array.from(images).map(img => {
					if (img.complete) return Promise.resolve();
					return new Promise(resolve => {
						img.addEventListener('load', resolve);
						img.addEventListener('error', resolve);
					});
				});
				return Promise.all(imagePromises);
			}

			// Esperar a que el DOM esté listo y todas las imágenes cargadas
			window.addEventListener('load', function() {
				waitForImages().then(() => {
					// Delay adicional para asegurar que React/componentes hidratados estén listos
					setTimeout(hideLoader, 500);
				});
			});
		</script>
	</body>
</html>

